  <script>
    let subNames = ["java", "python", "php", "square-js", "golang", "swift", "node-js", "html5", "css3", "react", "angular", "android", "apple", "windows", "linux"];

    let imgDivs = document.getElementsByClassName("image-div");
    for (i = 0; i < imgDivs.length; i++) {
      let iTag = imgDivs[i].querySelector("i");
      let classNaam = iTag.className.slice(13);
      if(!subNames.includes(classNaam)){
        imgDivs[i].innerHTML = "<div style='color:white; font-size:60px; float: right; padding: 20.5px 10px'>"+classNaam+"</div>";
      }
    }



    let mybutton = document.getElementById("btn-back-to-top");

    // When the user scrolls down 20px from the top of the document, show the button
    window.onscroll = function () { scrollFunction() };

    function scrollFunction() {
      if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
        mybutton.style.display = "block";
      } else {
        mybutton.style.display = "none";
      }
    }

    // When the user clicks on the button, scroll to the top of the document
    function topFunction() {
      document.body.scrollTop = 0;
      document.documentElement.scrollTop = 0;
    }

    function search() {
      // Declare variables
      var input, filter;
      input = document.getElementById("myInput");
      filter = input.value.toUpperCase();
      cards = document.getElementsByClassName("col-lg-4 col-md-6 col-sm-6")

      for (i = 0; i < cards.length; i++) {
        titlexs = cards[i].getElementsByClassName("card-titlex");
        texts = cards[i].getElementsByClassName("card-text");
        if (filter === "") {
          cards[i].style.display = "block";
          document.getElementById('notestsmessage').style.display = "none";
        } else {
          if (titlexs[0].innerHTML.toUpperCase().indexOf(filter) > -1 || (texts[1].innerHTML.toUpperCase().indexOf(filter) > -1)) {
            cards[i].style.display = "";
            document.getElementById('notestsmessage').style.display = "none";
          } else {
            cards[i].style.display = "none";
            document.getElementById('notestsmessage').style.display = "block";
          }
        }
      }
    }
    function showProfile(){
      let profileBox = document.getElementById('profile');
      profileBox.style.width = "450px";
      profileBox.style.boxShadow = "2px 6px 15px 5px rgba(101,  102, 104, 0.5)";
    }
    function hideProfile(){
      let profileBox = document.getElementById('profile');
      profileBox.style.width = "0px";
      profileBox.style.boxShadow = "";
    }
  </script>
