        <% if ((tinfo.length)==0) { %>
          <div style="padding: 8% 0 10%; font-size: xx-large; color:grey; text-align: center;">
            no tests created
          </div>
          <% } %>
            <% for( let index=0; index < tinfo.length; index++ ) { %>
              <div class="col-lg-4 col-md-6 col-sm-6">
                <form action="/leaderboard" method="post">
                  <button style="padding: 0; margin:0; border:0; text-align: left; background-color: rgba(0, 0, 0, 0);">
                <div class="card">
                  <div class="image-div">
                    <i class="fa-brands fa-<%= tinfo[index].tech_name[0]%>"></i>
                  </div>
                  <form action="/leaderboard" method="post">
                    <input type="text" style="visibility: hidden; position:absolute; right:0" value="<%= tinfo[index].id%>" name="test_id">
                  </form>
                  <!-- <div class="card-img-overlay">
                <h5 class="card-title">TCX</h5>
              </div> -->
                  <div class="card-body">
                    <h5 class="card-titlex">
                      <%= tinfo[index].test_name %>
                    </h5>
                    <p class="card-text">
                      <%= tinfo[index].test_desc %>
                    </p>
                    <p class="card-text" style="color: #2179a8;">
                      
                      <% if (tinfo[index].tech_name[0] == "square-js") { %>
                        <%= "javascript" %>
                        <% } else if (tinfo[index].tech_name[0] == "node-js") { %>
                          <%= "node.js" %>
                          <% } else { %>
                            <%= tinfo[index].tech_name[0] %>
                            <% } %>

                        <% for( let i=1; i < tinfo[index].tech_name.length; i++ ) { %>
                          <% if (tinfo[index].tech_name[i] == "square-js") { %>
                            <%= " | javascript" %>
                            <% } else if (tinfo[index].tech_name[i] == "node-js") { %>
                              <%= " | node.js" %>
                              <% } else { %>
                                <%= " | " + tinfo[index].tech_name[i] %>
                                <% } %>
                      <% } %>
                              
                    </p>
                    <!-- <a href="#" class="btn btn-primary">Give Test</a> -->
                  </div>
                </div>
              </button>
            </form>
              </div>
              <% } %>


                <div id="notestsmessage"
