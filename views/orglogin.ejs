    <div class="card mb-3" style="margin: 0; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 77%;">
      <div class="row g-4">
        <div class="col-md-6">
          <img src="Images\Screenshot (263).png" class="img-fluid rounded-start" alt="..." style=" height: 100%">
        </div>
        <div class="col-md-6" style="display: flex; position: relative;">
          <div class="card-body" style="margin: auto; ">
            <form action="/orglogin" class="sign-up-form" method="post">
              <div id="box" style="visibility:<%= displayError %>;" >
                <%= errorMssg %>
              </div>
              <h2 class="title">Org Sign In</h2>
              <div class="input-field" style="margin: 12px auto;">
                <i class="fas fa-envelope"></i>
                <input type="email" placeholder="Email" name="email" required />
              </div>
              <div class="input-field" style="margin: 12px auto;">
                <i class="fas fa-lock"></i>
                <input type="password" placeholder="Password" id="pass" name="password" required />
              </div>
              <div style="color: red; visibility: hidden;" id="errorMssg"> Passwords do not match </div>
              <input type="submit" class="btn" value="orglogin" name="button" />
              <br>
              <a href="/orgregister" style="text-decoration: none; line-height: 1.5;"> Dont have an account? Sign Up. </a>
              <br> 
              <a href="/validateEmail" style="text-decoration: none; line-height: 1.5;"> Forgot Pass? Reset Password. </a>
              <br> 
              <a href="/login" style="text-decoration: none; line-height: 1.5;"> Sign in with an User account? </a>
            </form>
          </div>
        </div>
      </div>
    </div>
    

  
