<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://kit.fontawesome.com/64d58efce2.js" crossorigin="anonymous"></script>
  <!-- bootstrap cdn -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
  <link rel="stylesheet" href="loginorg.css" />
  <title>Sign in & Sign up Form</title>
</head>

<body class="grad-background">
  <div class="card mb-3"
    style="margin: 0; position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%); width: 77%;">
    <div class="row g-8">
      <div class="col-md-6">
        <img src="Images\Screenshot (263).png" class="img-fluid rounded-start" alt="..." style=" height: 100%">
      </div>
      <div class="col-md-6" style="display: flex;">
        <div class="card-body" style="margin: auto;">
          <form action="/orglogin" class="sign-up-form" method="post">
            <h2 class="title">Org Sign up</h2>
            <div class="input-field">
              <i class="fas fa-user"></i>
              <input type="text" placeholder="Username" name="username" required />
            </div>
            <div class="input-field">
              <i class="fas fa-envelope"></i>
              <input type="email" placeholder="Email" name="email" required />
            </div>
            <div class="input-field">
              <i class="fas fa-phone-alt"></i>
              <input type="tel" placeholder="Contact No." name="contact" pattern="[1-9]{1}[0-9]{9}" required />
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" placeholder="Password" id="pass" name="password" required
                onfocus="displayRequirements()" onblur="hideRequirements()" />
            </div>
            <div class="passrequirements" id="passrequirements">
              <i class="fas fa-info-circle" style="color: rgb(195, 195, 195);"></i>
              Password must contain.. <br>
              &emsp;&nbsp; atleast 8 characters, <br>
              &emsp;&nbsp; atleast one digit, <br>
              &emsp;&nbsp; atleast one uppercase and one lowercase letter.
            </div>
            <div class="input-field">
              <i class="fas fa-lock"></i>
              <input type="password" placeholder="Confirm Password" pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
                id="confirmPass" onkeyup="confirmPassFunc();" required />
            </div>

            <div style="color: red; visibility: hidden;" id="errorMssg"> Passwords do not match </div>
            <input type="submit" class="btn" value="orgregister" name="button" />
            <br>
            <a href="/orglogin" style="text-decoration: none;"> Already have an account? Sign In. </a>

          </form>
        </div>
      </div>
    </div>
  </div>






  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.5/dist/umd/popper.min.js"
    integrity="sha384-Xe+8cL9oJa6tN/veChSP7q+mnSPaj5Bcu9mPX5F5xIGE0DVittaqT5lorf0EI7Vk"
    crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.min.js"
    integrity="sha384-ODmDIVzN+pFdexxHEHFBQH3/9/vQ9uori45z4JjnFsRydbmQbmL5t1tQ0culUzyK"
    crossorigin="anonymous"></script>
  <script src="JS\login.js"></script>
  <Script>
    function displayRequirements(){
      document.getElementById('passrequirements').classList.add("displayrequirements");
    }
    function hideRequirements(){
      document.getElementById('passrequirements').classList.remove("displayrequirements");
    }
  </Script>
</body>

</html>