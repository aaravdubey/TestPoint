  <script>
    function search() {
      // Declare variables
      var input, filter;
      input = document.getElementById("myInput");
      filter = input.value.toUpperCase();
      cards = document.getElementsByClassName("col-lg-4 col-md-6 col-sm-6")

      for (i = 0; i < cards.length; i++) {
        titles = cards[i].getElementsByClassName("card-title");
        if (filter === "") {
          cards[i].style.display = "block";
        } else {
          if (titles[0].innerHTML.toUpperCase().indexOf(filter) > -1 || (titles[1].innerHTML.toUpperCase().indexOf(filter) > -1)) {
            cards[i].style.display = "";
          } else {
            cards[i].style.display = "none";
          }
        }
      }
    }
  </script>
